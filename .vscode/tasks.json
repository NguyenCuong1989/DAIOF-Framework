{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "DAIOF: Run Quick Start",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["quick_start.py"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Run Main Framework",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["digital_ai_organism_framework.py"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Run All Tests",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pytest", "tests/", "-v"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Format Code (Black)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "black", ".", "--line-length=120"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Lint Code (Flake8)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "flake8", ".", "--max-line-length=120"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "HAIOS: Start Runtime",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["haios_runtime.py"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pip", "install", "-r", "requirements.txt"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Create Virtual Environment",
      "type": "shell",
      "command": "python3",
      "args": ["-m", "venv", ".venv"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Run Demo Script",
      "type": "shell",
      "command": "bash",
      "args": ["demo.sh"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Push to Origin",
      "type": "shell",
      "command": "git",
      "args": ["push", "origin", "${input:branchName}"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Generate System Report",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["complete_workspace_scan.py"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "DAIOF: Health Check",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-c", "from digital_ai_organism_framework import *; print('DAIOF Framework loaded successfully!')"],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "branchName",
      "type": "promptString",
      "description": "Enter branch name to push",
      "default": "main"
    }
  ]
}
